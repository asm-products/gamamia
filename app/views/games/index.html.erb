<%= render 'ui/navbar' %>

<div class="container">

  <% @weeks.each_with_index do |(week, games), i| %>

    <%= render 'weeks/week', week: week, i: i %>

    <% games.each_with_index do |game, index| %>

      <% if i == 0 && index == 3 %>
        <div id="mc_embed_signup" class="mt2 mb2 clearfix">
          <div class="signup relative right">

          <form action="//gamamia.us9.list-manage.com/subscribe/post?u=458396ad3c696185fe544661a&amp;id=a2accafc78" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>

            <div id="mc_embed_signup_scroll">

              <div class="mc-field-group clearfix">
                <label for="mce-EMAIL" class="col col-5 emaillabel">Want these in your email every week? </label>
                <input type="email" value="" name="EMAIL" class="required email col col-7" id="mce-EMAIL">
                <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button submit"></div>
              </div>
              <div id="mce-responses" class="clear">
                <div class="response" id="mce-error-response" style="display:none"></div>
                <div class="response" id="mce-success-response" style="display:none"></div>
              </div>
              <div style="position: absolute; left: -5000px;"><input type="text" name="b_458396ad3c696185fe544661a_a2accafc78" tabindex="-1" value=""></div>

            </div>

          </form>

          </div>
        </div>
      <% elsif i == 0 && index == 6 %>
        <div class="clearfix">
          <div class="col col-1">&nbsp;</div>
          <div class="col col-11 px2">
            <a class="block white p2 center h4" href="https://assembly.com/gamamia" style="background-color:#8888CC">
              Build with <span class="fa fa-heart"></span> on Assembly
            </a>
          </div>
        </div>
      <% end %>

      <div class="clearfix m2">
        <%=
          game_component(
            game: game,
            has_current_user_voted_for_game: signed_in? && current_user.voted_for?(game)
          )
        %>
      </div>
    <% end %>

  <% end %>
</div>
