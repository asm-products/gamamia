<div class="clearfix game-block">

<div class="col-1 left">
  <%= div_for(game, :vote) do %>
    <%= render partial: 'upvotes/upvote', locals: { game: game } %>
  <% end %>

  <div class="mb0 mt1 speech-bubble">
    <%= icon('comment') %> <%= game.comments_count %>
  </div>
</div>

<div class="bg-white col-11 clearfix js-game relative left">
  <div class="col col-7 gamecol">

    <h4 class="mt0">
      <a class="dark-gray" href="<%= game_path(game) %>"><%= game.title %></a>
    </h4>
    <p class="mb0 gamecaption"><%= truncate(game.description, length: 120) %></p>

    <footer class="game-meta col-7">        
        <ul class="list-reset platformlist">
            <% game.platform_list.each do |platform| %>
              <li><%= platform %>
            <% end %>
          </ul>

      <div class="clearfix game-posted">
        <div class="left">
          <p class="mb0 posted">POSTED</p>
          <p>@<%= game.user.username %></p>
        </div>
        <div class="left ml1">
          <%= avatar_for(game.user) %>
        </div>

      </div>
    </footer>

    



  </div>

  <div class="col col-5" style="background-image:url(<%= image_path(game.thumbnail) %>);background-size:cover;background-position:center;height:10em"></div>

</div>

</div>