<header class="nav-block">
  <div class="container clearfix">

    <div class="left logo-bar">
      <a class="clearfix block" href="<%= root_path %>">

        <div class="left mr2">
          <%= image_tag 'Gamamia_Logo_Square.png', :class => 'image' %>
        </div>
        <div class="overflow-hidden textbox">
          <h1 class="text mt1 mb0">Gamamia</h4>
          <p class="caption mb0">Find, share, and discuss indie games</p>
        </div>

      </a>

    </div>

    <div class="right">

      <ol class="list-reset clearfix m0 nav-bar">

        <% if user_is_admin? %>
          <li class="left">
            <%= link_to 'Admin' , admin_games_path, class: 'block p1' %>
          </li>
        <% end %>

        <% if user_signed_in? %>
          <div class="left profile-menu">
            <%= avatar_for(current_user, 'small') %>
            <div class="dropdown-menu">
              <div class="dropdown-caret">
                    <span class="caret-outer"></span>
                    <span class="caret-inner"></span>
                  </div>
              <ul class="list-reset mb0">
                <li><%= link_to 'Profile', current_user, class: 'block p1' %></li>
                <li><%= link_to "Settings", edit_user_path(current_user), class: 'block p1' %></li>
                <li><%= link_to('Logout', destroy_user_session_path, :method => :delete, class: 'block p1') %></li>
              </ul>
            </div>
          </div>
        <% else %>
          <li class="left">
            <%= link_to('Signup', new_user_registration_path, class: 'link-item logtext') %>
            <%= link_to('Login', new_user_session_path, class: 'link-item logtext') %>
          </li>
        <% end %>
        <li class="left">
          <a class="block add ml3" href="<%= new_game_path %>">+<span class="hide">Submit</span></a>
        </li>

      </ol>

    </div>

  </div>
</header>

<% if flash[:notice] -%>
  <p class='error blue center mt0'><%=h flash[:notice] %></p>
<% end -%>


<% if flash[:error] -%>
  <p class='error red center mt0'><%=h flash[:error] %></p>
<% end -%>
